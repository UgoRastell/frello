{% extends 'base.html.twig' %}

{% block title %}Board index{% endblock %}

{% block body %}

    <h1>Mes tableaux</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for board in boards %}
            <tr>
                <td>{{ board.libelle }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_board_show', {'id': board.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_board_edit', {'id': board.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Vous n'avez pas encore de tableaux <a class="btn btn-primary mr-2" href="{{ path('app_board_new') }}">Cr√©er un nouveau tableau</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
